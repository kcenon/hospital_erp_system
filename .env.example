# Hospital ERP System - Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration
DB_PASSWORD=hospital_dev_password
DB_USER=hospital_user
DB_NAME=hospital_erp_dev

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=32-byte-hex-key-for-aes-256-encryption

# Redis Configuration (for production with password)
REDIS_PASSWORD=

# Frontend Configuration (for production build)
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Hospital ERP System
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_ENABLE_PWA=true
